<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<% messages() %>

<div class="login-container">
<form>
  <label for="email">Email:</label><br>
  <input type="email" id="email" name="account_email" required><br>
  <label for="pass">Password:</label><br>
  <span class="passpg">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character</span> 
  <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br><br>
  <input type="submit" value="Login" class="login-button">
</form>
<p>No account? <a href="/account/register" class="signup-link"><span>Sign-up</span></a></p>
</div>